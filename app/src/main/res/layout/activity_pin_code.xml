<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".security.view.activities.PinCodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/standard_margin"
        android:gravity="center">

        <TextView
            android:id="@+id/pin_code_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_pin_code" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/pin_code_edit_text"
            style="@style/EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_standard_margin"
            android:ems="8"
            android:focusableInTouchMode="false"
            android:gravity="center_horizontal"
            android:inputType="numberPassword" />

        <LinearLayout
            android:id="@+id/fingerprint_hint_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_standard_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or_use_fingerprint" />

            <Space
                android:layout_width="4sp"
                android:layout_height="0dp" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="22sp"
                android:layout_height="22sp"
                app:srcCompat="@drawable/ic_fingerprint"
                app:tint="@color/colorSecondaryText" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/timer_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/error_many_pin_entry_attempts"/>

        <TextView
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            android:textColor="@color/white"
            tools:text="@string/template_timer"/>

    </LinearLayout>

</FrameLayout>