<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowAnimationStyle">@style/AppAnimationStyle</item>
    </style>

    <style name="AppAnimationStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenExitAnimation">@anim/stay_visible</item>
        <item name="android:activityCloseEnterAnimation">@anim/stay_visible</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
    </style>

    <style name="AppTheme.CardsBackground" parent="AppTheme">
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme.NoActionBar.CardsBackground" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="DialogButton" parent="SecondaryButton">
        <item name="android:textColor">@color/colorPrimaryAction</item>
    </style>

    <style name="PrimaryButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/PrimaryButton.Overlay</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/double_margin</item>
        <item name="android:paddingRight">@dimen/double_margin</item>
    </style>

    <style name="PrimaryButton.Overlay" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimaryActionDisabled</item>
        <item name="colorAccent">@color/colorPrimaryAction</item>
    </style>

    <style name="InfoCard">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="contentPadding">@dimen/standard_margin</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_marginTop">@dimen/half_standard_margin</item>
    </style>

    <style name="EditText">
        <item name="met_textColorHint">@color/colorSecondaryText</item>
        <item name="met_primaryColor">@color/colorSecondaryText</item>
        <item name="met_errorColor">@color/colorError</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="PrimaryActionTextView">
        <item name="android:textColor">@color/colorPrimaryAction</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryAction</item>

        <item name="android:textColor">@null</item>
        <item name="android:textSize">@null</item>
    </style>

    <style name="AppbarElevationView">
        <item name="android:visibility">visible</item>
    </style>

    <style name="HintText" parent="@style/SecondaryText">
        <item name="android:textSize">@dimen/text_size_hint</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar.CardsBackground">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>
